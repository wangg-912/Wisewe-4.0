{
  "name": "evolution-v4",
  "version": "1.0.0",
  "scripts": {
    "bootstrap": "yarn install",
    "dev": "vite",
    "build": "vite build",
    "build:no-cache": "yarn clean:cache && npm run build",
    "dev:electron": "tsc electrons/main.ts && electron electrons/main.js",
    "pack:electron": "yarn build && electron-builder --dir",
    "dist:electron": "yarn build && electron-builder",
    "report": "cross-env REPORT=true npm run build",
    "preview": "npm run build && vite preview",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx,js,json,vue}\" --fix",
    "lint:prettier": "prettier --write --loglevel warn \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --fix \"**/*.{vue,less,postcss,css,scss}\" \"!dist/**/*\""
  },
  "build": {
    "files": [
      "!node_modules",
      "dist/assets/**"
    ]
  },
  "dependencies": {
    "@types/nprogress": "^0.2.0",
    "axios": "^0.21.1",
    "crypto-es": "^1.2.7",
    "element-plus": "^1.0.2-beta.32",
    "nprogress": "^0.2.0",
    "vue": "^3.0.5",
    "vue-router": "^4.0.4",
    "vue-types": "^3.0.2",
    "lodash-es": "^4.17.21",
    "vuex": "^4.0.0",
    "vuex-module-decorators": "^1.0.1"
  },
  "devDependencies": {
    "@types/qs": "^6.9.5",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "@vitejs/plugin-vue": "^1.1.4",
    "@vitejs/plugin-vue-jsx": "^1.1.2",
    "@vue/compiler-sfc": "^3.0.5",
    "@types/lodash-es": "^4.17.4",
    "autoprefixer": "^10.2.4",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.8",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.6.0",
    "path": "^0.12.7",
    "prettier": "^2.2.1",
    "qs": "^6.9.6",
    "sass": "^1.32.8",
    "stylelint": "^13.11.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.1.3",
    "vite": "^2.0.1"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier"
    ]
  }
}
